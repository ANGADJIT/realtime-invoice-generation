{
    "configurations": [
        {
            "name": "API Localhost",
            "type": "python",
            "request": "launch",
            "module": "uvicorn",
            "console": "internalConsole",
            "env": {
                "ASGI_ENV": "development",
                "PYDEVD_DISABLE_FILE_VALIDATION": "1"
            },
            "cwd": "${workspaceFolder}//src",
            "args": [
                "main:api",
                "--reload"
            ],
            "jinja": true,
            "justMyCode": true
        }
    ]
}